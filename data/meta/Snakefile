subworkflow rnaseq:
    workdir: "../rnaseq"
    snakefile: "../rnaseq/Snakefile"

rule all:
    input:
        "meta.RData"

rule meta:
    input:
        rscript = "meta.r",
        meta = "meta.tsv",
        rna = rnaseq("assemble.RData")
    output:
        "meta.RData"
    shell:
        "Rscript {input.rscript}"
