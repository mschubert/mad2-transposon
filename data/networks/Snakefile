configfile: "../../config.yaml"

subworkflow aex:
    workdir: "../arrayexpress"
    snakefile: "../arrayexpress/Snakefile"

subworkflow gsets:
    workdir: "../genesets"
    snakefile: "../genesets/Snakefile"

rule all:
    input:
        expand("set_fet/{sets}.rds", sets=config['genesets'])

rule aracne:
    input:
        rscript = "aracne.r",
        expr = aex("{accession}.rds")
    output:
        data = "aracne_{accession}.rds"
    resources:
        mem = 10240,
        walltime = 720
    shell:
        "Rscript {input.rscript} --infile {input.expr} --outfile {output.data}"

rule set_fet:
    input:
        rscript = "set_fet.r",
        net = "aracne_E-GEOD-13159.rds",
        sets = gsets("human/{sets}.rds")
    output:
        data = "set_fet/{sets}.rds"
    resources:
        walltime = 480
    shell:
        "Rscript {input.rscript}"
            " --network {input.net}"
            " --setfile {input.sets}"
            " --outfile {output.data}"
