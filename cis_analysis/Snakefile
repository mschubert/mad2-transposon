subworkflow cis:
    workdir: "../data/cis"
    snakefile: "../data/cis/Snakefile"

rule all:
    input:
        "poisson.RData",
        "kernel_cimpl.RData"

# keep separate for now, bc gene set analysis

rule interval_match:
    input:
        rscript = "poisson.r",
        data = "analysis_set.RData"
    output:
        result = "poisson.RData"
    shell:
        "Rscript {input.rscript} --data {input.data} --outfile {output.result}"

rule cimpl:
    input:
        rscript = "kernel_cimpl.r",
        data = "analysis_set.RData"
    output:
        result = "kernel_cimpl.RData"
    shell:
        "Rscript {input.rscript} --data {input.data} --outfile {output.result}"

rule anaysis_set:
    input:
        rscript = "analysis_set.r",
        data = cis("cis_per_tumor.RData")
    output:
        aset = "analysis_set.RData"
    shell:
        "Rscript {input.rscript} --infile {input.data} --outfile {output.aset}"
